{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true
  },
  "lib": ["ES2022"],
  "include": ["src/**/*", "database"],
  "exclude": ["node_modules"]
}